@model LaptopListViewModel


<div class="row">

    <div class="col-md-3 my-3 mb-3">
        <div style="display: block;">
            <div class="mb-3">
                @await Component.InvokeAsync("BrandFilter")
            </div>

            <div class="mb-3">
                @await Component.InvokeAsync("OSFilter")
            </div>
            <div class="mb-3">
                @await Component.InvokeAsync("ProcessorFilter")
            </div>
            <div class="mb-3">
                @await Component.InvokeAsync("ScreenFilter")
            </div>

        </div>
    </div>


    <div class="col-md-9">

        <div class="row">
            <div class="col-md-4">
                <a asp-controller="compare" asp-action="GetLaptopsByPuan" asp-route-url="en-yuksek-puan"
                    class="btn btn-primary btn-sm">En Yüksek Puan</a>
            </div>
            <div class="col-md-4">
                <a asp-controller="compare" asp-action="GetLaptopsByLowPrice" asp-route-url="en-dusuk-fiyat"
                    class="btn btn-primary btn-sm">En Düşük Fiyat</a>
            </div>
            <div class="col-md-4">
                <a asp-controller="compare" asp-action="GetLaptopsByHighPrice" asp-route-url="en-yuksek-fiyat"
                    class="btn btn-primary btn-sm">En Yüksek Fiyat</a>
            </div>
        </div>

        <div class="row">
            @foreach (var product in Model.Laptops)
            {
                <div class="col-md-9">
                    @await Html.PartialAsync("_productcard", product)
                </div>
            }
            <div class="row">
                <div class="col">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            @for (int i = 0; i < Model.PageInfo.TotalPages(); i++)
                            {
                                <li class="page-item @(Model.PageInfo.CurrentPage==i+1?"active":"")">
                                    <a class="page-link" href="?page=@(i+1)">@(i+1)</a>
                                </li>
                            }
                        </ul>
                    </nav>


                </div>
            </div>
        </div>
    </div>



    @section Scripts
    {
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
    }